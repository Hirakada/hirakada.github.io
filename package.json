{
  "name": "hirakada.github.io",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:landingpage": "pnpm --filter=@hirakada/ui build && build && pnpm --filter=landingpage build",
    "build:portfolio": "pnpm --filter=@hirakada/ui build && build && pnpm --filter=portfolio build",
    "build:all": "pnpm --filter=@hirakada/ui build && pnpm --filter=landingpage build && pnpm --filter=portfolio build",
    "dev:landingpage": "pnpm --filter=landingpage dev",
    "dev:portfolio": "pnpm --filter=portfolio dev",
    "dev": "echo 'Please use a specific dev script: pnpm dev:landingpage or pnpm dev:portfolio'",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "vite": "^6.3.5",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.25.0",
    "tailwindcss": "^4.1.10",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.5",
    "typescript": "^5.x.x"
  }
}