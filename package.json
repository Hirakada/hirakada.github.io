{
  "name": "hirakada.com",
  "version": "1.0.0",
  "description": "Monorepo for Hirakada's personal website and digital portfolio.",
  "private": true,
  "scripts": {
    "dev:landingpage": "pnpm --filter landingpage dev",
    "build:landingpage": "pnpm --filter landingpage build",
    "start:landingpage": "pnpm --filter landingpage preview",
    "lint:landingpage": "pnpm --filter landingpage lint",

    "dev:portfolio": "pnpm --filter portfolio dev",
    "build:portfolio": "pnpm --filter portfolio build",
    "start:portfolio": "pnpm --filter portfolio preview",
    "lint:portfolio": "pnpm --filter portfolio lint",

    "build:ui": "pnpm --filter @hirakada/ui build",
    "lint:ui": "pnpm --filter @hirakada/ui lint",

    "install:all": "pnpm install",
    "build:all": "pnpm build:ui && pnpm build:landingpage && pnpm build:portfolio",
    "lint:all": "pnpm --filter '*' lint"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}